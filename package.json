{
  "name": "error-deets",
  "version": "1.1.1",
  "description": "JavaScript/TypeScript errors with optional details and a code",
  "keywords": [
    "error",
    "extra",
    "code",
    "details",
    "log"
  ],
  "homepage": "https://github.com/tufan-io/error-deets#readme",
  "bugs": {
    "url": "https://github.com/tufan-io/error-deets/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tufan-io/error-deets.git"
  },
  "license": "Apache-2.0",
  "author": "tufan.io",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "docs"
  ],
  "scripts": {
    "build": "npm-run-batch",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "check-coverage": "nyc check-coverage -x .tmp",
    "check-run-scripts": "run-batch",
    "checks": "run-batch",
    "clean": "rimraf dist .nyc_output coverage *.tsbuildinfo",
    "cloc": "run-batch",
    "cloc-md": "cloc --exclude-dir=test --quiet --sum-one --hide-rate --unix --by-file --md --out=docs/cloc.md ./src",
    "cloc-report": "cloc --exclude-dir=test --quiet --sum-one --hide-rate --unix --out=docs/cloc.report ./src",
    "cloc_": "cloc --exclude-dir=test --quiet --sum-one --hide-rate --unix ./src",
    "commit": "git-cz",
    "compile": "tsc",
    "compile:watch": "tsc -w",
    "dep-check": "dependency-check . --no-dev",
    "dependency-upgrade": "run-batch",
    "ensure-bins": "which npm-check sort-package-json",
    "format": "tsfmt -r",
    "git-add_": "git add .",
    "git-commit-upgrade_": "git diff-index --quiet HEAD || git commit -m \"chore: ðŸ¤– updating dependencies\"",
    "lint": "tslint -c tslint.json --project ./tsconfig.json --format stylish",
    "no-circular-deps": "madge --circular dist/index.js",
    "no-mods": "git-mods",
    "npm-check_": "npm-check -y",
    "nyc-report": "nyc report --reporter=text-summary",
    "pkg-ok": "pkg-ok",
    "pre-commit-hook": "run-batch",
    "pre-push-hook": "run-batch",
    "qt": "npm-run-batch",
    "secure": "npm audit",
    "sh": "npm-sh",
    "snapshots": "cross-env NODE_ENV=test ava --verbose --update-snapshots",
    "sort-package-json": "sort-package-json",
    "staged-mods-ok": "git-mods --staged_ok",
    "test": "cross-env NODE_ENV=test nyc -r lcov -r text-summary -r json-summary ava --verbose",
    "test-no-cover": "cross-env NODE_ENV=test ava --verbose",
    "todos": "leasot --exit-nicely --skip-unsupported ./src",
    "todos-md": "leasot --exit-nicely --skip-unsupported --reporter markdown ./src> ./docs/TODOs.md",
    "upgrade_": "npm upgrade"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit-hook",
      "pre-push": "npm run pre-push-hook"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "ava": {
    "files": [
      "dist/**/test.js",
      "dist/**/test/**/*.js",
      "!dist/**/test/fixtures/**/*.js",
      "!dist/**/helpers/**",
      "!.tmp"
    ]
  },
  "nyc": {
    "exclude": [
      "**/test/**",
      "**/helpers/**",
      ".tmp/**"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "watermarks": {
      "branches": [
        100,
        100
      ],
      "functions": [
        100,
        100
      ],
      "lines": [
        100,
        100
      ],
      "statements": [
        100,
        100
      ]
    }
  },
  "dependencies": {},
  "engines": {
    "node": ">=13.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "run-batch": {
    "build": [
      "format",
      "lint",
      "clean",
      "compile",
      "test",
      "no-circular-deps",
      "cloc",
      "todos",
      "todos-md"
    ],
    "qt": [
      "compile",
      "test-no-cover"
    ],
    "checks": [
      "lint",
      "check-coverage",
      "dep-check",
      "no-circular-deps",
      "pkg-ok",
      "staged-mods-ok"
    ],
    "pre-commit-hook": [
      "check-coverage",
      "dep-check",
      "pkg-ok",
      "staged-mods-ok"
    ],
    "pre-push-hook": [
      "secure",
      "no-mods"
    ],
    "cloc": [
      "cloc-md",
      "cloc-report",
      "cloc_"
    ],
    "dependency-upgrade": [
      "no-mods",
      "ensure-bins",
      "sort-package-json",
      "npm-check_",
      "upgrade_",
      "dep-check",
      "no-circular-deps",
      "git-add_",
      "build",
      "git-commit-upgrade_"
    ],
    "check-run-scripts": [
      "build",
      "qt",
      "checks",
      "pre-commit-hook",
      "pre-push-hook",
      "dependency-upgrade"
    ]
  },
  "private": false,
  "simple-ci": {
    "version": "0.2.17"
  },
  "devDependencies": {
    "@tufan-io/simple-ci": "^0.2.18"
  }
}
